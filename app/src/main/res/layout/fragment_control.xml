<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">

        <LinearLayout
            android:id="@+id/connection_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_connection_dot"
                style="@style/Theme.RemoteControlCar.FabMini"
                android:contentDescription="DOT STATUS"
                android:src="@drawable/ic_light_off" />

            <TextView
                android:id="@+id/connection_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_settings"
            style="@style/Theme.RemoteControlCar.FabMini"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="SETTINGS"
            android:src="@drawable/ic_setting_24" />

        <TextView
            android:id="@+id/control_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/button_settings"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/server_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/connection_area"
            android:layout_alignParentStart="true"
            android:layout_marginTop="6dp" />

        <RelativeLayout
            android:id="@+id/control_direction_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <include
                layout="@layout/control_direction"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <include
                layout="@layout/control_joystick"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <include
                layout="@layout/control_accelerometer"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/control_function_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">

            <include
                layout="@layout/control_function"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </RelativeLayout>

    </RelativeLayout>

    <include
        android:id="@+id/loading_layout"
        layout="@layout/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>